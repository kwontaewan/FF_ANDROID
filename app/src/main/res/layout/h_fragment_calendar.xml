<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/darkYellow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/h_calender_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_back"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/h_calender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="20dp"
                android:textColor="@color/white" />
            <ImageView
                android:id="@+id/h_calender_forward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_forward"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/h_compactcalendar_view"
            android:layout_width="fill_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="200dp"
            app:compactCalendarTextSize="12sp"
            app:compactCalendarBackgroundColor="@color/darkYellow"
            app:compactCalendarTextColor="#fff"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
            app:compactCalendarCurrentDayBackgroundColor="#B71C1C"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/h_calender_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="5dp"/>

</LinearLayout>