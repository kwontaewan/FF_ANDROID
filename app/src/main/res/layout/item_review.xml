<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    card_view:contentPadding="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/re_rating_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/re_rating_img"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/add"
                app:siBorderWidth="8dp"
                app:siBorderColor="@color/primary"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />

            <RatingBar
                android:id="@+id/re_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/re_rating_img"
                android:layout_toEndOf="@+id/re_rating_img" />

            <TextView
                android:id="@+id/re_review_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~~~~~~~\n\n\n\n\n\n\n"
                android:layout_below="@+id/re_rating_bar"
                android:layout_alignLeft="@+id/re_rating_bar"
                android:layout_alignStart="@+id/re_rating_bar" />

            <TextView
                android:id="@+id/re_review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.3.4"
                android:layout_below="@+id/re_review_text"
                android:layout_alignLeft="@+id/re_review_text"
                android:layout_alignStart="@+id/re_review_text" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>