<android.support.v4.widget.DrawerLayout
    android:id="@+id/h_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".host.view.activity.HostHomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/h_followfellow_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/darkYellow"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/CustomToolbar"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/h_tabLayout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/darkYellow"
            app:theme="@style/CustomToolbar"
            app:tabTextAppearance="@style/AppTheme.TextAppearance.Design.Tab"
            app:tabIndicatorColor="@android:color/white"
            app:tabIndicatorHeight="4dp"
            />
        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/h_viewPager"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/h_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/h_navigation_view_header"
        app:menu="@menu/host_drawer">

        <Button
            android:id="@+id/sw_guest_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkYellow"
            android:text="@string/sw_guest"
            android:layout_gravity="bottom">
        </Button>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>