<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    card_view:contentPadding="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/h_cal_month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/h_cal_month_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/h_cal_month_text" />
       <RelativeLayout
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/h_cal_month_text2"
           android:layout_toRightOf="@+id/h_cal_month_text2"
           android:background="@color/primary">
            <ImageView
                android:id="@+id/h_cal_profile_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/h_cal_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/h_cal_profile_img"
                android:layout_toEndOf="@+id/h_cal_profile_img" />
           <TextView
               android:id="@+id/h_cal_personnel_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="personnel"
               android:textSize="20dp"
               android:layout_below="@+id/h_cal_date_text"
               android:layout_toRightOf="@+id/h_cal_profile_img"
               android:layout_toEndOf="@+id/h_cal_profile_img" />

       </RelativeLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>