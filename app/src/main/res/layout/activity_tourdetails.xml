<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/primary"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/CustomToolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/tour_details_viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/pageIndicator"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>    
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="Main Title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="sub Title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:text="~~~~~~"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/Tour_Route"
            android:textColor="@color/primary"
            android:textSize="20dp"/>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="@color/primary"
            android:text="@string/Host"/>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/add"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/name_Text"
                android:layout_toStartOf="@+id/name_Text" />

            <TextView
                android:id="@+id/name_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Gunter"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/profile_img"
                android:layout_alignLeft="@+id/host_button"
                android:layout_alignStart="@+id/host_button" />
            <TextView
                android:id="@+id/area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hongdae, Seoul, South Korea"
                android:layout_below="@+id/name_Text"
                android:layout_alignLeft="@+id/name_Text"
                android:layout_alignStart="@+id/name_Text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="introduce"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/area_text"
                android:layout_alignLeft="@+id/area_text"
                android:layout_alignStart="@+id/area_text" />

            <Button
                android:id="@+id/host_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:text="@string/Host_Page"
                android:textColor="@color/white"
                android:layout_below="@+id/profile_img"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/primary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Reviews"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/rating_list_all"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="263dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_new"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/rating_img"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/add"
                app:siBorderWidth="8dp"
                app:siBorderColor="@color/primary"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@id/rating_img"
                android:layout_centerInParent="true">
                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="true"
                    android:maxLines="3"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="write"
                    />
            </LinearLayout>
        </RelativeLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="300dp"
            layout="@layout/review_list"/>
        <Button
            android:id="@+id/book_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4B70DF"
            android:text="@string/Book_Now"
            android:textColor="@color/white"/>
    </LinearLayout>
</ScrollView>